<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds">
    <property name="prefix-path" value="/Users/kohhyunjin/Project/sign/logs"/>
    <property name="logging.level.root" value="INFO"/>
    <property name="logging.level.com.bezzangss" value="INFO"/>

    <!-- 파일 로그 설정 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 로그 파일 경로 -->
        <file>${prefix-path}/sign.log</file>
        <!-- 롤링 정책 설정 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- 롤링 파일 이름 패턴 -->
            <fileNamePattern>${prefix-path}/sign.log.%d{yyyy-MM-dd}-%i</fileNamePattern>
            <!-- 최대 로그 보관 기간 -->
            <maxHistory>30</maxHistory>
            <!-- 최대 파일 크기 -->
            <maxFileSize>100MB</maxFileSize>
        </rollingPolicy>
        <!-- 로그 패턴 설정 -->
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 콘솔 로그 설정 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 디폴트 로깅 레벨 설정 -->
    <root level="${logging.level.root}">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

    <!-- 패키지별 로깅 레벨 설정 -->
    <logger name="com.bezzangss" level="${logging.level.com.bezzangss}" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

    <shutdownHook class="ch.qos.logback.core.hook.DelayingShutdownHook"/>
</configuration>
